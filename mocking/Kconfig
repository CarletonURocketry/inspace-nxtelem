#
# For a description of the syntax of this configuration file,
# see the file kconfig-language.txt in the NuttX tools repository.
#

config INSPACE_MOCKING
	tristate "Sensor Mocking"
	depends on SENSORS_FAKESENSOR
	depends on UORB
	depends on SENSORS_GNSS
	default n
	---help---
		Enable mocking of sensors using test data

if INSPACE_MOCKING

comment "Program options"

config INSPACE_MOCKING_PROGNAME
	string "Program name"
	default "inspace_mock"
	---help---
		This is the name of the program that sets up sensor mocking.

comment "Mounting options"

config INSPACE_MOCKING_ROMFS
	bool "Use ROMFS file system"
	depends on BOARDCTL_ROMDISK
	depends on FS_ROMFS
	default y
	---help---
		Use the ROMFS file system to mount the CSV data for fake sensors.

config INSPACE_MOCKING_MOUNT
	string "ROMFS mount point"
	default "/inspace"
	depends on INSPACE_MOCKING_ROMFS
	---help---
		Where to mount the ROMFS containing the files in the test-data directory.

comment "Test data options"

config INSPACE_MOCKING_DATA_DIR
	string "Directory with fakesensor CSV files"
	default "test-data/quick-mock-flight"
	---help---
		The directory that contains the flight data to use for the fakesensors

if SENSORS_FAKESENSOR

menu "Faked Sensors"

config INSPACE_FAKE_BARO
	bool "Fake Barometic Sensor"
	default n
	---help---
		Create a fakesensor for barometric data

config INSPACE_FAKE_BARO_FILENAME
	string "Fake Barometric Sensor Input File"
	depends on INSPACE_FAKE_BARO
	default "/inspace/baro.csv"
	---help---
		The file to read fake barometric sensor data from

config INSPACE_FAKE_BARO_MAX_BATCH
	int "The maximum batch size of this sensor"
	depends on INSPACE_FAKE_BARO
	default 1
	---help---
		The maximum batch size of sensor measurements

config INSPACE_FAKE_ACCEL
	bool "Fake Acceleration Sensor"
	default n
	---help---
		Create a fakesensor for acceleration data

config INSPACE_FAKE_ACCEL_FILENAME
	string "Fake Acceleration Sensor Input File"
	depends on INSPACE_FAKE_ACCEL
	default "/inspace/accel.csv"
	---help---
		The file to read fake acceleration data from

config INSPACE_FAKE_ACCEL_MAX_BATCH
	int "The maximum batch size of this sensor"
	depends on INSPACE_FAKE_ACCEL
	default 1
	---help---
		The maximum batch size of sensor measurements

config INSPACE_FAKE_GYRO
	bool "Fake Gyroscope Sensor"
	default n
	---help---
		Create a fakesensor for gyroscope data

config INSPACE_FAKE_GYRO_FILENAME
	string "Fake Gyroscope Sensor Input File"
	depends on INSPACE_FAKE_GYRO
	default "/inspace/gyro.csv"
	---help---
		The file to read fake gyroscope data from

config INSPACE_FAKE_GYRO_MAX_BATCH
	int "The maximum batch size of this sensor"
	depends on INSPACE_FAKE_GYRO
	default 1
	---help---
		The maximum batch size of sensor measurements

config INSPACE_FAKE_MAG
	bool "Fake Magnetometer Sensor"
	default n
	---help---
		Create a fakesensor for magnetometer data

config INSPACE_FAKE_MAG_FILENAME
	string "Fake Magnetometer Sensor Input File"
	depends on INSPACE_FAKE_MAG
	default "/inspace/mag.csv"
	---help---
		The file to read fake magnetometer data from

config INSPACE_FAKE_MAG_MAX_BATCH
	int "The maximum batch size of this sensor"
	depends on INSPACE_FAKE_MAG
	default 1
	---help---
		The maximum batch size of sensor measurements

endmenu # Faked Sensors

endif # SENSORS_FAKESENSOR

endif
